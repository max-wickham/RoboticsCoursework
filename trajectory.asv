%this function takes the current and a goal position 
%split the trajectory in smaller unevenly-distributed steps 
 
function pos_array = trajectory(current_pos, final_pos)
    N = 10; %use even number
    degree = 1; 
    
    x_trans = linspace(-1, 1, N);
    c = abs(x_trans.^(-degree));
    y_trans = c./sum(c, 'all');

    distance = current_pos-final_pos;
    yx = y_trans.*distance(:,1);
    yy = y_trans.*distance(:,2);

    pos_array = [[];[]
    a = current_pos(:,1);
    b = current_pos(:,2);
    for i=1:N
        x(i) = a+yx(i);
        a = x(i);
        y(i) = b+yy(i);
        b = y(i);
    end
    pos_array = [x;y]
end